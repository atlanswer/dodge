{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "extends": ["ultracite"],
  "formatter": {
    "useEditorconfig": true
  },
  "linter": {
    "rules": {
      "style": {
        "useBlockStatements": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double"
    }
  },
  "html": {
    "formatter": {
      "enabled": true
    }
  }
}
